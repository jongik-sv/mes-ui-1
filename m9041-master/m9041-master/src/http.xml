<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
<bean name="MSG_LOGGER" class="com.poscoict.glue.http.logging.MsgLogger">
    <property name="connector" ref="JDBC_CONNECTOR" />
</bean>
<bean name="MSG_ERROR_LOGGER" class="com.poscoict.glue.http.logging.MsgErrorLogger">
    <property name="connector" ref="JDBC_CONNECTOR" />
</bean>

<bean name="JNDI_CONNECTOR" class="com.poscoict.glue.http.logging.connect.JNDIConnector">
    <property name="jndiName" value="M90JNDI" />
</bean>
<bean name="JDBC_CONNECTOR" class="com.poscoict.glue.http.logging.connect.JDBCConnector">
    <property name="url" value="jdbc:oracle:thin:@10.248.100.29:1521:MESDEV" />
    <property name="id" value="M90APUSER" />
    <property name="password" value="M90APUSER" />
</bean>

<!-- Http 전문 쏘기 모듈 시작 -->
<bean name="HTTP_SENDER" class="com.poscoict.glue.http.send.HttpSender">
    <property name="httpURLProperty" ref="HTTP_URL" />
    <property name="encoder" ref="ENCODER"/> 
    <property name="receiveType" value="PARAM" />		<!-- PARAM|STREAM -->
    <property name="paramName" value="msg" />			<!-- receiveType이 PARAM인 경우  -->
    <property name="isSync" value="true" />
    <property name="msgLogger" ref="MSG_LOGGER" />
    <property name="msgErrorLogger" ref="MSG_ERROR_LOGGER" />
</bean>

<bean name="HTTP_URL" class="com.poscoict.glue.http.send.HttpURLProperty">
    <property name="beginIndex" value="19" />
    <property name="endIndex" value="22" />
	<property name="2000">
		<props>
            <prop key="C10">http://127.0.0.1:8010/C10/HttpReceiver.http</prop>
            <prop key="M20">http://127.0.0.1:8010/M20/HttpReceiver.http</prop>
            <prop key="M42">http://127.0.0.1:8010/M42/HttpReceiver.http</prop>
            <prop key="M17">http://127.0.0.1:8020/M17/HttpReceiver.http</prop>
            <prop key="M47">http://127.0.0.1:8020/M47/HttpReceiver.http</prop>
            <prop key="M26">http://127.0.0.1:8020/M26/HttpReceiver.http</prop>
            <prop key="M60">http://127.0.0.1:8030/M60/HttpReceiver.http</prop>
            <prop key="M77">http://127.0.0.1:8030/M77/HttpReceiver.http</prop>
		</props>
	</property>
</bean>
<!-- Http 전문 쏘기 모듈 종료 -->

<!-- Http 전문 받기 모듈 시작 -->
<bean name="HTTP_HANDLER" class="com.poscoict.glue.http.receive.HttpUnionHandler">
    <property name="receiveType" value="STREAM" />		<!-- PARAM|STREAM -->
    <property name="paramName" value="msg" />			<!-- receiveType이 PARAM인 경우  -->
    <property name="isSync" value="true" />
</bean>

<bean id="ENCODER" class="com.poscoict.glue.http.charset.StringEncoder">
    <property name="characterSet" value="UTF-8" /> 
</bean>
<bean id="DECODER" class="com.poscoict.glue.http.charset.StringDecoder">
    <property name="characterSet" value="UTF-8" /> 
</bean>
<!-- Http 전문 받기 모듈 종료 -->

</beans>