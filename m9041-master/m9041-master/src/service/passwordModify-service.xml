<?xml version="1.0" encoding="UTF-8"?>
<service name="passwordModify-service" initial="분기">
  <transaction-manager id="tx1" commit="true" />
  <activity name="비밀번호 조회" class="com.poscoict.glue.biz.dhtmlx.form.FormSearch">
    <transition name="success" value="end" />
    <property name="sqlkey" value="PASSWORD.select" />
    <property name="dao" value="m90dao" />
  </activity>
  <activity name="이전 사용 비밀번호 조회" class="com.poscoict.glue.biz.dhtmlx.form.FormSearch">
    <transition name="success" value="암호화" />
    <property name="resultkey" value="RK_PASSWORD" />
    <property name="sqlkey" value="PASSWORD.select" />
    <property name="dao" value="m90dao" />
  </activity>
  <activity name="분기" class="com.posdata.glue.biz.activity.PosDefaultRouter">
    <transition name="find" value="비밀번호 조회" />
    <transition name="checkUpdate" value="비밀번호변경여부조회" />
    <transition name="save" value="이전 사용 비밀번호 조회" />
  </activity>
  <activity name="비밀번호변경여부조회" class="com.poscoict.glue.biz.dhtmlx.form.FormSearch">
    <transition name="success" value="end" />
    <property name="sqlkey" value="PASSWORD.needUpdate" />
    <property name="dao" value="m90dao" />
  </activity>
  <activity name="저장" class="com.poscoict.glue.biz.dhtmlx.form.FormUpdate">
    <transition name="success" value="사용자 정보 session에 갱신" />
    <property name="dao" value="m90dao" />
    <property name="sqlkey" value="PASSWORD.update" />
    <property name="isAudit" value="true" />
  </activity>
  <activity name="사용자 정보 session에 갱신" class="com.poscoict.glue.m90.activity.GetUserInfoForSession">
    <transition name="success" value="end" />
  </activity>
  <activity name="암호화" class="com.poscoict.glue.m90.activity.PWEncryption">
    <transition name="success" value="저장" />
  </activity>
</service>

